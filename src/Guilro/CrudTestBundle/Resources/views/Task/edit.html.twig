{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Task edit</h1>

    {{ form_start(edit_form) }}
        {{ form_row(edit_form.name) }}
        Tags : <br/>
        {% for tag_form in edit_form.tags %}
            <p>
            {% if loop.last %}
                New tag : {{ form_row(tag_form) }}
            {% else %}
                Tag {{ loop.index }} : {{ form_row(tag_form) }}
            {% endif %}
            </p>
            --------------------------
        {% endfor %}
    {{ form_end(edit_form) }}
        <ul class="record_actions">
    <li>
        <a href="{{ path('index_') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
